<h2>Create a new character:</h2>

<form action="/characters/create" method="post">
  <label>
    Name
    <input type="text" name="name">
  </label>

  <label>
    Occupation
    <input type="text" name="occupation">
  </label>

  <label>
    Weapon
    <input type="text" name="weapon">
  </label>

  <button type="submit">Create!</button>
</form>